@using JobBoard.Models;

<h1>Job List</h1>
@if (Model.Count == 0)
{
  <p>There are no jobs availble in the list.</p>
}
<ul>
  @foreach (Job item in Model)
  { 
    <li><a href='/jobs/@item.Id'>@item.Title</a>, @item.Description, @item.Contact</li>
  }
</ul>

<a href="/jobs/new">Add a new job.</a>

<form action="/jobs/delete" method="post">
  <button type="submit" name="button">Clear All Jobs</button>
</form>